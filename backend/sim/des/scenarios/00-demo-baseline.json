    "mission_split": {
      "VMU-1": 0.5,
      "VMU-3": 0.5
    }
  },
  "demand": [
    {
      "mission_type": "MIR",
      "rate_per_hour": 2.0
    },
    {
      "mission_type": "SCAR",
      "rate_per_hour": 0.5
    },
    {
      "mission_type": "ES",
      "rate_per_hour": 0.5
    }
  ],
  "mission_types": [
    {
      "name": "MIR",
      "priority": 2,
      "required_payload_types": [],
      "required_aircrew": {
        "pilot": 1,
        "so": 1
      },
      "flight_time": {
        "type": "triangular",
        "a": 3,
        "m": 4,
        "b": 6
      }
    },
    {
      "name": "SCAR",
      "priority": 1,
      "required_payload_types": [
        "SkyTower II"
      ],
      "required_aircrew": {
        "pilot": 1,
        "so": 1
      },
      "flight_time": {
        "type": "triangular",
        "a": 4,
        "m": 5.5,
        "b": 8
      }
    },
    {
      "name": "ES",
      "priority": 1,
      "required_payload_types": [
        "EW Pod"
      ],
      "required_aircrew": {
        "pilot": 1,
        "so": 1
      },
      "flight_time": {
        "type": "triangular",
        "a": 2,
        "m": 3,
        "b": 5
      }
    }
  ],
  "process_times": {
    "preflight": {
      "type": "deterministic",
      "value_hours": 0.75
    },
    "postflight": {
      "type": "deterministic",
      "value_hours": 0.5
    },
    "turnaround": {
      "type": "deterministic",
      "value_hours": 0.25
