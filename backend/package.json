{
  "name": "sorsim-backend",
  "version": "0.3.16",
  "description": "sor sim api server",
  "main": "server.js",
  "scripts": {
    "prod": "node server.js",
    "dev": "nodemon server.js",
    "test-run": "jest --coverage",
    "test-watch": "jest --coverage --watchAll",
    "version-patch": "npm version patch",
    "version-minor": "npm version minor",
    "version-major": "npm version major"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "16.4.7",
    "express": "^4.18.2",
    "mysql2": "^3.6.1"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "jest-html-reporter": "^3.10.2",
    "nodemon": "^3.1.7"
  },
  "jest": {
    "testEnvironment": "node",
    "coverageDirectory": "tests/reports/backend_coverage_report",
    "collectCoverageFrom": [
      "./sim/**/*.js"
    ],
    "coverageReporters": [
      "text",
      "text-summary",
      "html",
      "lcov"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 70,
        "functions": 70,
        "lines": 70,
        "statements": 70
      }
    },
    "reporters": [
      "default",
      [
        "jest-html-reporter",
        {
          "pageTitle": "DES Engine Test Report",
          "outputPath": "tests/reports/backend_test_report/index.html",
          "includeFailureMsg": true,
          "includeConsoleLog": true,
          "sort": "status"
        }
      ]
    ]
  }
}